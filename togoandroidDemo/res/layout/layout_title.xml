<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"       
    android:orientation="horizontal"    
    android:layout_width="fill_parent"     
    android:layout_height="fill_parent"
     android:id="@+id/home1">  
  <!-- 左边的图标 android:layout_alignParentLeft="true" 这样才能一直靠左-->  
  <!-- 中间居中 android:layout_centerInParent="true"  -->  
        <!-- 右边的图标 android:layout_alignParentRight="true"  这样才能一直靠右-->

    

    <ImageButton
        android:id="@+id/iv_myhome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#00000000"
        android:onClick="click"
        android:src="@drawable/ic_action_user" />
    

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:text="@string/title_home" />
    
    <TextView
        android:id="@+id/tv_title_geren"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:visibility="gone"
        android:text="@string/title_myhome" />

    
</RelativeLayout>  
