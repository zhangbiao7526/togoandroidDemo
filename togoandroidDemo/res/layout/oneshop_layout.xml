<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_oneshop"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:src="@drawable/a" />

    <TextView
        android:id="@+id/tv_oneshop_shopname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_oneshop_shopname" />

    <TextView
        android:id="@+id/tv_oneshop_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_oneshop_money" />

    <TextView
        android:id="@+id/tv_oneshop_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_oneshop_type" />

    <TextView
        android:id="@+id/tv_oneshop_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_oneshop_address" />

    <TextView
        android:id="@+id/tv_oneshop_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_oneshop_description" />

</LinearLayout>
