		    android:src="@drawable/cimageview1" />
    <GridView
        android:id="@+id/gridViewRight1"
        android:paddingTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:numColumns="3" >
    </GridView>
    
</LinearLayout>
